@model IEnumerable<THWeb_Test.Models.HocPhan>

@{
    ViewData["Title"] = "Đăng ký học phần";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Đăng ký học phần</h3>
        <a asp-action="GioDangKy" class="btn btn-primary">
            <i class="fas fa-shopping-cart me-1"></i> Xem giỏ đăng ký
        </a>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag me-1"></i> Mã HP</th>
                        <th><i class="fas fa-book-open me-1"></i> Tên học phần</th>
                        <th><i class="fas fa-award me-1"></i> Số tín chỉ</th>
                        <th><i class="fas fa-users me-1"></i> Số lượng còn lại</th>
                        <th><i class="fas fa-check me-1"></i> Đăng ký</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge bg-primary">@item.MaHP</span></td>
                            <td>@item.TenHP</td>
                            <td>
                                <span class="badge bg-info">@item.SoTinChi</span>
                            </td>
                            <td>
                                @if (item.SoLuongDuKien > 10)
                                {
                                    <span class="text-success">@item.SoLuongDuKien <i class="fas fa-check-circle ms-1"></i></span>
                                }
                                else if (item.SoLuongDuKien > 0)
                                {
                                    <span class="text-warning">@item.SoLuongDuKien <i class="fas fa-exclamation-circle ms-1"></i></span>
                                }
                                else
                                {
                                    <span class="text-danger">@item.SoLuongDuKien <i class="fas fa-times-circle ms-1"></i></span>
                                }
                            </td>
                            <td>
                                <form asp-action="ThemVaoGio" method="post">
                                    <input type="hidden" name="maHP" value="@item.MaHP" />
                                    <button type="submit" class="btn btn-sm @(item.SoLuongDuKien <= 0 ? "btn-secondary" : "btn-success")" 
                                            @(item.SoLuongDuKien <= 0 ? "disabled" : "")>
                                        @if (item.SoLuongDuKien <= 0)
                                        {
                                            <i class="fas fa-ban me-1"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-plus-circle me-1"></i>
                                        }
                                        Đăng ký
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>