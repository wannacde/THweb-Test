@model IEnumerable<THWeb_Test.Models.DangKy>

@{
    ViewData["Title"] = "Đăng ký của tôi";
}

<h1>Đăng ký học phần của tôi</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Bạn chưa có đăng ký học phần nào.
    </div>
}
else
{
    @foreach (var dangKy in Model)
    {
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <h5>Mã đăng ký: @dangKy.MaDK</h5>
                    <span>Ngày đăng ký: @(dangKy.NgayDK?.ToString("dd/MM/yyyy"))</span>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã HP</th>
                            <th>Tên học phần</th>
                            <th>Số tín chỉ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var chiTiet in dangKy.ChiTietDangKys)
                        {
                            <tr>
                                <td>@chiTiet.MaHP</td>
                                <td>@chiTiet.HocPhan?.TenHP</td>
                                <td>@chiTiet.HocPhan?.SoTinChi</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}

<div class="mt-3">
    <a asp-action="DangKy" class="btn btn-primary">Đăng ký thêm học phần</a>
</div>