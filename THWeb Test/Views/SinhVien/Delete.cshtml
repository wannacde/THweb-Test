@model THWeb_Test.Models.SinhVien

@{
    ViewData["Title"] = "Xóa sinh viên";
}

<h1>Xóa sinh viên</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
        <p>Bạn vẫn có thể xóa sinh viên này, nhưng tất cả các đăng ký học phần của sinh viên này cũng sẽ bị xóa.</p>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h3>Bạn có chắc chắn muốn xóa sinh viên này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã sinh viên
        </dt>
        <dd class="col-sm-10">
            @Model.MaSV
        </dd>
        <dt class="col-sm-2">
            Họ tên
        </dt>
        <dd class="col-sm-10">
            @Model.HoTen
        </dd>
        <dt class="col-sm-2">
            Giới tính
        </dt>
        <dd class="col-sm-10">
            @Model.GioiTinh
        </dd>
        <dt class="col-sm-2">
            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @(Model.NgaySinh?.ToString("dd/MM/yyyy"))
        </dd>
        <dt class="col-sm-2">
            Ngành học
        </dt>
        <dd class="col-sm-10">
            @Model.NganhHoc?.TenNganh
        </dd>
        <dt class="col-sm-2">
            Hình
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Hinh))
            {
                <img src="@Url.Action("GetImage", "Images", new { filename = Model.Hinh })" alt="@Model.HoTen" style="max-width: 200px;" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaSV" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>