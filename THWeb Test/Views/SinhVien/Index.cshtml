@model IEnumerable<THWeb_Test.Models.SinhVien>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-users me-2"></i>Danh sách sinh viên</h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><i class="fas fa-id-card me-1"></i> Mã SV</th>
                        <th><i class="fas fa-user me-1"></i> Họ tên</th>
                        <th><i class="fas fa-venus-mars me-1"></i> Giới tính</th>
                        <th><i class="fas fa-calendar me-1"></i> Ngày sinh</th>
                        <th><i class="fas fa-graduation-cap me-1"></i> Ngành học</th>
                        <th><i class="fas fa-image me-1"></i> Hình</th>
                        <th><i class="fas fa-cogs me-1"></i> Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaSV</td>
                            <td>@item.HoTen</td>
                            <td>
                                @if (item.GioiTinh == "Nam")
                                {
                                    <span class="text-primary"><i class="fas fa-male me-1"></i> Nam</span>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="fas fa-female me-1"></i> Nữ</span>
                                }
                            </td>
                            <td>@(item.NgaySinh?.ToString("dd/MM/yyyy"))</td>
                            <td>@item.NganhHoc?.TenNganh</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Hinh))
                                {
                                    <img src="@Url.Action("GetImage", "Images", new { filename = item.Hinh })" alt="@item.HoTen" 
                                         class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                }
                                else
                                {
                                    <i class="fas fa-user-circle fa-3x text-secondary"></i>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.MaSV" class="btn btn-sm btn-warning" title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaSV" class="btn btn-sm btn-info" title="Chi tiết">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaSV" class="btn btn-sm btn-danger" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>