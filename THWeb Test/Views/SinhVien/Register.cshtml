@model THWeb_Test.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center">
                <h2><i class="fas fa-user-plus me-2"></i>Đăng ký tài khoản</h2>
            </div>
            <div class="card-body">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="MaSV" class="control-label"><i class="fas fa-id-card me-2"></i>Mã sinh viên</label>
                        <input asp-for="MaSV" class="form-control" />
                        <span asp-validation-for="MaSV" class="text-danger"></span>
                        <small class="form-text text-muted">Nhập mã sinh viên của bạn để đăng ký tài khoản</small>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="control-label"><i class="fas fa-user me-2"></i>Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label"><i class="fas fa-lock me-2"></i>Mật khẩu</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="control-label"><i class="fas fa-check-circle me-2"></i>Xác nhận mật khẩu</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3 d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus me-2"></i>Đăng ký
                        </button>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Đã có tài khoản? Đăng nhập
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}